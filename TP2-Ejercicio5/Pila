package tp2ejercicio5;


public class Pila {
    private Object VectorPila[];
    private int tope;
    private int max;
    
    public Pila(int max){
        this.max = max;
        this.tope = 0;
        this.VectorPila = new Object [max];        
    }
    
    public boolean PilaVacia(){
        if(tope == 0){
            return true;
        }
        else{
            return false;
        }
    }
    
    public boolean PilaLlena(){
        if(this.tope == this.max){
            return true;
        }
        else{
            return false;
        }
    }
    
    public void VaciarPila(){
        this.tope = 0;
    }
    
    public boolean Apilar(Object dato){
        if (this.PilaLlena()){
            System.out.println("---- PILA LLENA ----");
        }
        else{
            VectorPila[tope] = dato;
            tope++;
        }
        return true;
    }
    
    public Object Desapilar(){
        Object dato = null;
        
        if (this.PilaVacia()){
            System.out.println("---- PILA VACIA ----");
        }
        else{
            dato = VectorPila[tope--];
        }
        return VectorPila [tope];
    }
  
    public Object elementoTope(){
        return VectorPila[tope-1];
    }
    
}
